@{
    ViewData["Title"] = "ProjectUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderPartial("_ProjectDetailPartialView");
}

@section css
{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/custom/ProjectUser.css" rel="stylesheet" type="text/css" />
   
} 

<div class="card">
    
    <div class="card-body">
        <div class="user-management-container"> 
            <div class="user-list-section">
                <div class="section-header">
                    <h4>Projedeki Kullanıcılar</h4>
                    <div class="d-flex">
                        <div class="search-box">
                            <span class="search-icon">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" id="projectUserSearch" placeholder="Kullanıcı ara...">
                        </div>
                        
                    </div>
                </div>

                <div id="projectUsersList"> 
                </div>

                <div id="projectUsersEmpty" class="empty-state" style="display: none;">
                    <p>Bu projede henüz kullanıcı bulunmamaktadır.</p>
                </div>

                <div id="projectUsersLoading" class="loading-indicator" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Yükleniyor...</span>
                    </div>
                    <p class="mt-2">Kullanıcılar yükleniyor...</p>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div id="projectUsersPaginationInfo">Kullanıcılar yükleniyor...</div>
                    <div id="projectUsersPagination" class="pagination"> 
                    </div>
                </div>
            </div>

            <!-- Eklenebilir Kullanıcılar Bölümü -->
            <div class="available-users-section">
                <div class="section-header">
                    <h4>Eklenebilir Kullanıcılar</h4>
                    <div class="search-box">
                        <span class="search-icon">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="availableUserSearch" placeholder="Kullanıcı ara...">
                    </div>
                </div>

                <div id="availableUsersList">
                    <!-- Eklenebilir kullanıcılar burada listelenecek -->
                </div>

                <div id="availableUsersEmpty" class="empty-state" style="display: none;">
                    <p>Eklenebilecek başka kullanıcı bulunmamaktadır.</p>
                </div>

                <div id="availableUsersLoading" class="loading-indicator" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Yükleniyor...</span>
                    </div>
                    <p class="mt-2">Kullanıcılar yükleniyor...</p>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div id="availableUsersPaginationInfo">Kullanıcılar yükleniyor...</div>
                    <div id="availableUsersPagination" class="pagination"> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="notification" class="notification">İşlem başarıyla tamamlandı!</div>

@section js
{

    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/js/user/user-manager.js"></script>
     
}
